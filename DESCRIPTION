Package: dist_lag_het
Type: Package
Title: Treatment Effect Estimation in Complex Designs
Version: 0.1.0
Authors@R: c(
    person("ClÃ©ment", "de Chaisemartin", role = c("aut"),
           email = "clement.dechaisemartin@sciencespo.fr"),
